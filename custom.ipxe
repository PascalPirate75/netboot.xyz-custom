#!ipxe
###
### netboot.xyz-custom menu example
###

:custom
clear custom_choice
menu This is PPC Menu
item --gap This is the first sub menu
item option_one ${space} Loading an ISO
item option_two ${space} Loading ISO guts
choose custom_choice || goto custom_exit
echo ${cls}
goto ${custom_choice}
goto custom_exit

:option_one
kernel https://boot.netboot.xyz/memdisk raw iso
initrd http://192.168.0.177/USB/test.iso
boot || goto custom_exit

:option_two
kernel tftp://192.168.0.114/sf/vmlinuz
initrd tftp://192.168.0.114/sf/initrd.gz
imgargs vmlinuz initrd=initrd.gz pmedia=cd
boot || goto custom_exit

:custom_exit
chain utils.ipxe
exit
